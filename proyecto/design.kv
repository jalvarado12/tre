    MDScreen:
        name: 'screen_7'
        GridLayout:
            rows: 7
            BoxLayout:
                MDLabel:
                    text: "Aquí aprenderás a distinguir animales"
                    halign: 'center'
                    font_size: 40
            BoxLayout:
                spacing: 1
                ElementCard:
                    id: animal
                    line_color: (0.2, 0.2, 0.2, 0.8)
                    text: "Haz click aquí para reproducir el sonido de un animal"
                    on_press:
                        app.animal_escogido = app.escoger_animal()
                        app.reproducir_sonido(app.animal_escogido)

                ElementCard:
                    line_color: (0.2, 0.2, 0.2, 0.8)
                    text: "Repetir sonido"
                    on_press: app.reproducir_sonido(app.animal_escogido)
            BoxLayout:
                MDLabel:
                    text: "Qué animal escuchaste?"
                    halign: 'center'
                    font_size: 30
            BoxLayout:
                BotonAnimal:
                    image: 'imagenes/Gato.png'
                    on_release:
                        respuesta.text = app.verificar_animal(app.animal_escogido,"gato")
                BotonAnimal:
                    id: pato
                    image: 'imagenes/Pato.png'
                    on_release:
                        respuesta.text = app.verificar_animal(app.animal_escogido,"pato")
                BotonAnimal:
                    id: leon
                    image: 'imagenes/León.png'
                    on_release:
                        respuesta.text = app.verificar_animal(app.animal_escogido,"leon")
            BoxLayout:
                BotonAnimal:
                    id: tigre
                    image: 'imagenes/Tigre.png'
                    on_release:
                        respuesta.text = app.verificar_animal(app.animal_escogido,"tigre")
                BotonAnimal:
                    id: elefante
                    image: 'imagenes/Elefante.png'
                    on_release:
