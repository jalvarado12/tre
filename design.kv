    color: '#FFFFFF'
    text: ''

<ImageScreen@MDBoxLayout>:
    orientation: 'vertical'
    padding: 100
    text: ''
    Image:
        source: 'reporte.png'
        allow_stretch: True
        keep_ratio: True
    MDFillRoundFlatButton:
        text: 'REGRESAR'
